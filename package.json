{
  "name": "css-doodle",
  "version": "0.15.3",
  "description": "A web component for drawing patterns with CSS",
  "main": "css-doodle.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "minify": "terser css-doodle.js -c -m --comments '/^!/' -o css-doodle.min.js --ecma 6 --ascii_only=true",
    "trim": "./tools/trim css-doodle.min.js",
    "test": "node -r esm node_modules/.bin/ava --verbose",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/css-doodle/css-doodle.git"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/css-doodle"
  },
  "devDependencies": {
    "ava": "^3.3.0",
    "esm": "^3.2.25",
    "rollup": "^2.47.0",
    "terser": "^5.7.0"
  },
  "files": [
    "src",
    "css-doodle*.js"
  ],
  "keywords": [
    "css",
    "web-components"
  ],
  "author": "yuanchuan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/css-doodle/css-doodle/issues"
  },
  "homepage": "https://css-doodle.com"
}
